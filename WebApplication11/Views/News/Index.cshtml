@model IEnumerable<WebApplication11.Models.News>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Session["AdminStatus"] != null)
{
    <p>
        @Html.ActionLink("Create New", "Create")
        <br />
        @Html.ActionLink("Back to System Management", "Index", "Administrators")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Discription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Administrator.AdminName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Discription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Administrator.AdminName)
        </td>
        @if (Session["AdminStatus"] != null)
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
        }
    </tr>
}

</table>
